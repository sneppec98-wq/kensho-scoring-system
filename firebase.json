{
    "firestore": {
        "rules": "firestore.rules"
    },
    "hosting": [
        {
            "target": "kenshotech",
            "public": "landing_page",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ]
        },
        {
            "target": "kensho-scoring",
            "public": ".",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**",
                "landing_page/**",
                "dist_production/**",
                "builder/**",
                "package.json",
                "package-lock.json",
                "main.js",
                "preload.js"
            ],
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ]
        },
        {
            "target": "kensho-peserta",
            "public": "public_portal",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ]
        },
        {
            "target": "kensho-invoice",
            "public": "kensho-pembayaran",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ]
        }
    ]
}