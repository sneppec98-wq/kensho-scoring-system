{
    "firestore": {
        "rules": "firestore.rules"
    },
    "hosting": [
        {
            "target": "kenshotech",
            "public": "landing_page",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ]
        },
        {
            "target": "kensho-scoring",
            "public": ".",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**",
                "landing_page/**",
                "dist_production/**",
                "builder/**",
                "package.json",
                "package-lock.json",
                "main.js",
                "preload.js",
                "KenshoBuilder/**",
                "_OLD_BUILDER_ARCHIVE/**",
                "obfuscate.js",
                "PRICING_GUIDE.md",
                "ROADMAP.md",
                "setup-admin.html",
                "generate-dummy-data.html",
                "fix_final.ps1",
                "admin-rekap-BACKUP.html"
            ],
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ]
        },
        {
            "target": "kensho-peserta",
            "public": "public_portal",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**",
                "ROADMAP.md",
                "**/_OLD_BUILDER_ARCHIVE/**"
            ],
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ]
        },
        {
            "target": "kensho-invoice",
            "public": "kensho-pembayaran",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ]
        }
    ]
}