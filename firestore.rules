rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAuthorized() {
      return isAuthenticated();
    }

    match /admins {
      allow read, write: if true;
    }

    match /admins/{document=**} {
      allow read, write: if true;
    }

    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == resource.data.uid || request.auth.token.email.upper() == userId);
      allow create: if isAuthenticated();
      allow update, delete: if false;
    }

    match /events/{eventId} {
      // Allow public read for events and its subcollections (Classes & Athletes)
      // This is required for the Official Participant Portal link.
      allow read: if true;
      allow write: if isAuthorized();
      
      match /{allChildren=**} {
        allow read: if true;
        allow write: if isAuthorized();
      }
    }

    match /officials/{officialId} {
      allow read, write: if isAuthorized();
    }

    match /licenses/{docId} {
      allow read, update: if true;
      allow create, delete: if isAuthenticated();
    }

    match /settings/app {
      allow read: if true;
    }

    match /templates/{templateId} {
      allow read, write: if true;
    }

    match /voice_lounge_users/{userId} { allow read, write: if isAuthenticated(); }
    match /voice_calls/{callId} { allow read, write: if isAuthenticated(); }
    match /voice_signals/{signalId} { allow read, write: if isAuthenticated(); }

    // Activity Logs
    match /activity_logs/{logId} {
      allow read, write: if isAuthenticated();
    }

    // Collection Group for Athletes (Scoring System)
    match /{path=**}/athletes/{athleteId} {
      allow read, write: if isAuthenticated();
    }

    // System Config (Global Maintenance)
    match /system_config/features {
      allow read: if true;
      allow write: if isAuthenticated();
    }

  }
}
